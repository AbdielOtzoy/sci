---
import Layout from "../layouts/Layout.astro";

const services = [
  {
    title: "Residential Construction",
    description:
      "From single-family homes to multi-unit complexes, we bring your residential visions to life.",
    image: "/placeholder.svg?height=200&width=300",
  },
  {
    title: "Commercial Construction",
    description:
      "We design and build commercial spaces that are both functional and aesthetically pleasing.",
    image: "/placeholder.svg?height=200&width=300",
  },
  {
    title: "Civil Engineering",
    description:
      "Our team of expert engineers ensures that every project is structurally sound and efficient.",
    image: "/placeholder.svg?height=200&width=300",
  },
  {
    title: "Renovation and Remodeling",
    description:
      "We breathe new life into existing structures with our renovation and remodeling services.",
    image: "/placeholder.svg?height=200&width=300",
  },
];
---

<Layout title="SCI - Services">
  <div class="container mx-auto py-16">
    <h1 class="text-4xl font-bold text-center mb-12">Our Services</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        services.map((service) => (
          <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <img
              src={service.image || "/placeholder.svg"}
              alt={service.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">{service.title}</h3>
              <p>{service.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
