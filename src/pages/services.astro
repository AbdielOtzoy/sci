---
import Navbar from "@/components/Navbar";
import Layout from "../layouts/Layout.astro";
import { fade } from 'astro:transitions';

import "../styles/global.css";
import Footer from "@/components/Footer.astro";

export interface Preload {
	as: string
	href: string
	type: string
	rel?: "preload" | "prefetch"
	crossorigin?: string
}

const services = [
  {
    title: "Construcción y ejecución de obras de infraestructura",
    description:
      "Desarrollamos proyectos de infraestructura completos, garantizando calidad, tiempo y presupuesto.",
    image: "/images/services/d1.webp",
  },
  {
    title: "Planificación y diseño de proyectos de construcción",
    description:
      "Enfoque integral en diseño y planificación, cumpliendo expectativas y normativas vigentes.",
    image: "/images/services/d2.webp",
  },
  {
    title: "Topografía",
    description:
      "Levantamientos topográficos de alta precisión para planificación y construcción de proyectos.",
    image: "/images/services/d3.webp",
  },
  {
    title: "Diseño Estructural",
    description:
      "Soluciones estructurales seguras y eficientes, adaptadas a las necesidades de cada proyecto.",
    image: "/images/services/d4.webp",
  },
  {
    title: "Obras de agua potable, drenaje sanitario y pluvial",
    description:
      "Diseño y construcción de sistemas hidrosanitarios optimizados y sostenibles.",
    image: "/images/services/d5.webp",
  },
  {
    title: "Asesorías técnicas y supervisión para proyectos",
    description:
      "Asesoría y supervisión técnica para garantizar el éxito de sus proyectos de construcción.",
    image: "/images/services/d6.webp",
  },
];

const preloadServicesImages: Preload[] = services.map((service) => ({
  as: "image",
  href: "/images/services/servicesbg.jpg",
  type: "image/webp",
  rel: "preload",
}));
---

<Layout 
  title="Servicios"
  description="Conoce los servicios de construcción integral que ofrecemos en SCI."
  preload={preloadServicesImages}
  >
  <div>
    <Navbar client:load />
    
    <section class="relative h-screen bg-black">
      <div
  class="h-screen bg-black relative bg-cover bg-center bg-no-repeat shadow-lg overflow-hidden"
  style={{ backgroundImage: `url(/images/services/servicesbg.jpg)` }}
>
  <div class="absolute inset-0 bg-black/50"></div>
  <div class="relative z-10 flex flex-col justify-center items-center h-full text-white p-6">
    <!-- Título principal -->
    <h3 class="text-4xl sm:text-6xl font-semibold text-center">
      Nuestros Servicios
    </h3>
    <p class="mt-4 text-lg sm:text-xl text-center max-w-2xl md:block hidden">
      Transformamos ideas en realidad con soluciones integrales de construcción y planificación.
    </p>

    <!-- Tarjetas de servicios -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl w-full">
      <div class="bg-white/10 backdrop-blur-sm p-6 rounded-lg border border-white/20">
        <h4 class="text-xl sm:text-2xl font-semibold">Calidad Garantizada</h4>
        <p class="mt-2 text-gray-200">
          Cada proyecto se ejecuta con los más altos estándares de calidad, asegurando durabilidad y excelencia.
        </p>
      </div>
      <div class="bg-white/10 backdrop-blur-sm p-6 rounded-lg border border-white/20">
        <h4 class="text-xl sm:text-2xl font-semibold">Innovación y Tecnología</h4>
        <p class="mt-2 text-gray-200">
          Utilizamos las últimas tecnologías y metodologías para optimizar tiempos y costos.
        </p>
      </div>
      <div class="bg-white/10 backdrop-blur-sm p-6 rounded-lg border border-white/20 md:block hidden">
        <h4 class="text-xl sm:text-2xl font-semibold">Compromiso con el Cliente</h4>
        <p class="mt-2 text-gray-200">
          Trabajamos codo a codo contigo para cumplir tus expectativas y superar tus metas.
        </p>
      </div>
    </div>

  </div>
</div>

      <!-- Título de la sección -->
<h2 class="text-5xl font-bold text-white text-center bg-royal-blue py-10">
  Conoce nuestros servicios
</h2>

<!-- Contenedor de Servicios -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 p-10 bg-royal-blue md:px-20">
  {
    services.map((service, index) => (
      <div 
        class="rounded-lg shadow-lg bg-royal-blue-light text-white w-full mx-auto transform transition duration-300 hover:scale-105 hover:shadow-xl relative"
      >
        <img
          src={service.image}
          alt={service.title}
          class="w-full h-60 object-cover"
        />
        <div class="flex flex-col p-5">
          <h3 class="text-xl font-semibold mt-5">{service.title}</h3>
          <p class="text-gray-300 mt-3">{service.description}</p>
        </div>
      </div>
    ))
  }
</div>

      <Footer />

    </section>
  </div>
  
</Layout>