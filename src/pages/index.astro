---
import Details from "@/components/Details.astro";
import Carousel from "../components/Carousel";
import HeroSection from "@/sections/HeroSection.astro";
import Navbar from "../components/Navbar";
import TextSection from "../sections/TextSection.astro";
import Layout from "../layouts/Layout.astro";

import "../styles/global.css";
import ContactSection from "@/sections/ContactSection.astro";
import Footer from "@/components/Footer.astro";
export interface Preload {
	as: string
	href: string
	type: string
	rel?: "preload" | "prefetch"
	crossorigin?: string
}

const preloadCarouselImage: Preload[] = [ 
	{
		as: "image",
		href: "/images/bg1.jpg",
		type: "image/jpeg",
		rel: "preload",
	},
	{
		as: "image",
		href: "/images/bg2.jpg",
		type: "image/jpeg",
		rel: "preload",
	},
	{
		as: "image",
		href: "/images/bg3.jpg",
		type: "image/jpeg",
		rel: "preload",
	},
]
---

<Layout 
	title="Inicio"
	description="SCI es una empresa de tecnología que ofrece soluciones de software y hardware para empresas y organizaciones."
	preload={preloadCarouselImage}
	>
	<div>
		<Navbar client:load />
		<Carousel client:load />
		<div class="relative">
			<!-- Triángulo más grande y transparente -->
			<div
				class="absolute bottom-0 left-0 w-full h-0 border-l-[0vw] border-r-[70vw] border-b-[30px] md:border-b-[70px] border-l-transparent border-b-light-blue-300 opacity-50"
			>
			</div>

			<!-- Triángulo existente -->
			<div
				class="absolute bottom-0 left-0 w-full h-0 border-l-[100vw] border-r-[0vw] border-b-[50px] md:border-b-[90px] border-l-transparent border-r-transparent border-royal-blue"
			>
			</div>
		</div>

		<TextSection />
		<Details />
		<ContactSection />
		<Footer />
	</div>
</Layout>
