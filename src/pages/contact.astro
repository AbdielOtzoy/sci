---
import Layout from "../layouts/Layout.astro";
---

<Layout title="SCI - Contact">
  <div class="container mx-auto py-16">
    <h1 class="text-4xl font-bold text-center mb-12">Contact Us</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <h2 class="text-2xl font-semibold mb-4">Get in Touch</h2>
        <p class="mb-4">
          We'd love to hear from you. Please fill out the form below or use our
          contact information to reach out.
        </p>
        <div class="mb-4">
          <h3 class="text-xl font-semibold mb-2">Address</h3>
          <p>123 Construction Ave, Building City, 12345</p>
        </div>
        <div class="mb-4">
          <h3 class="text-xl font-semibold mb-2">Phone</h3>
          <p>+1 (123) 456-7890</p>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-2">Email</h3>
          <p>info@sciconstructionengineering.com</p>
        </div>
      </div>
      <div>
        <form class="space-y-4">
          <div>
            <label for="name" class="block mb-1">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-3 py-2 border rounded"
              required
            />
          </div>
          <div>
            <label for="email" class="block mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-3 py-2 border rounded"
              required
            />
          </div>
          <div>
            <label for="message" class="block mb-1">Message</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              class="w-full px-3 py-2 border rounded"
              required></textarea>
          </div>
          <button
            type="submit"
            class="bg-orange text-white px-6 py-2 rounded-full text-lg hover:bg-opacity-80 transition duration-300"
            >Send Message</button
          >
        </form>
      </div>
    </div>
  </div>
</Layout>
